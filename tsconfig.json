{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "incremental": true,
    "paths": {
      "bot": ["./src/index.js"],
      "bot/*": ["./src/*.js"]
    },
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo"
  },
  "include": ["src/**/*"]
}

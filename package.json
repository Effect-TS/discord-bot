    "test": "vitest",
    "check": "concurrently \"pnpm tsgo -b tsconfig.json\" \"pnpm oxlint -c .oxlintrc.json\"",
    "lint-fix": "oxlint -c .oxlintrc.json --fix"
  },
  "devDependencies": {
    "@effect/language-service": "^0.77.0",
    "@types/node": "^25.3.3",
    "@typescript/native-preview": "7.0.0-dev.20260301.1",
